<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Suite_Sorting"  parallel="tests" thread-count="4"  >
    <listeners>
        <listener class-name="utils.TestExecutionListener"/>
    </listeners>

    <test name="Test Sorting Options- English" >
        <parameter name="browserName" value="Chrome"/>
        <parameter name="lang" value="Eng"/>
        <groups>
            <run>
                <include name="Eng" />
            </run>
        </groups>
        <classes>
            <class name="tests.SortingTests" />
        </classes>
    </test>


    <test name="Test Sorting Options - French" >
        <parameter name="browserName" value="Chrome"/>
        <parameter name="lang" value="Fr"/>
        <groups>
            <run>
                <include name="Fr" />
            </run>
        </groups>
        <classes>
            <class name="tests.SortingTests" />
        </classes>
    </test>


    <test name="Test Sorting Options - English Firefox" >
        <parameter name="browserName" value="Firefox"/>
        <parameter name="lang" value="Eng"/>
        <groups>
            <run>
                <include name="Fr" />
            </run>
        </groups>
        <classes>
            <class name="tests.SortingTests" />
        </classes>
    </test>

    <test name="Test Sorting Options - French FF" >
        <parameter name="browserName" value="Firefox"/>
        <parameter name="lang" value="Fr"/>
        <groups>
            <run>
                <include name="Fr" />
            </run>
        </groups>
        <classes>
            <class name="tests.SortingTests" />
        </classes>
    </test>

</suite>


